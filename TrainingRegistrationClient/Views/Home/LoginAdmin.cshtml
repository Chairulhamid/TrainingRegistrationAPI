@{
    ViewData["Title"] = "Login Employee";
    Layout = "_LayoutLogin";
}

<div class="container">
    <div class="img">
        <img src="~/assets/img/hero-img.png" />
    </div>
    <div class="login-container">
        <form method="post" class="user" action="/LoginEmp/LoginAdmin">
            <img class="avator" src="https://freesvg.org/img/publicdomainq-0006514oahggv.png">
            <h2>Login to Your account</h2>
            <div class="input-div" one>
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <h5>Email</h5>
                    <input class="input" name="email" id="EmailEmp" type="text" />

                </div>
            </div>
            <div class="input-div" two>
                <div class="i">
                    <i class="fas fa-lock"></i>
                </div>
                <div>
                    <h5>password</h5>
                    <input class="input" name="password" id="PasswordEmp" type="password" validate />
                </div>
            </div>

            <!--<a class="nav-link scrollto" href="https://localhost:44344/Home/RegistEmp">Sign Up</a>-->
            @*<a class="nav-link scrollto" data-bs-toggle="modal" data-bs-target="#modalDataEmpployee">Not have an acount ?</a>*@
            <!--<a asp-controller="Home" asp-action="ResetPassEmp">Forgot password ?</a>-->
            <input type="submit" class="btn" value="Login" />
        </form>
    </div>
</div>
