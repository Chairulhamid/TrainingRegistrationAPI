@{
    ViewData["Title"] = "Login Page";
    Layout = "_LayoutLogin";
}

    <div class="container">
        <div class="img">
            <img src="~/assets/img/hero-img1.png" />
        </div>
        <div class="login-container">
            <form method="post" class="user" action="/LoginUser/Auth">
                <img class="avator" src="~/assets/img/Mii.png" >
                <h3>Log in to Your Account</h3>
                <div class="input-div" one>
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h5>Email</h5>
                        <input class="input" name="email" id="Email" type="text" />
                        
                    </div>
                </div>
                <div class="input-div" two>
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>password</h5>
                        <input class="input" name="password" id="Password" type="password"  validate/>
                    </div>
                </div>
                <a asp-controller="Home" asp-action="ResetPassPage">Forgot password ?</a>
                <input  type="submit" class="btn" value="Login" />
            </form>
        </div>
    </div>

