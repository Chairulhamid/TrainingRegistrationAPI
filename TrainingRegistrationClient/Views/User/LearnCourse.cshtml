@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutSubUser";
}
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Lesson</h2>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Cource Details Section ======= -->
    <section id="course-details" class="course-details">
        <div class="container" data-aos="fade-up">

            <div class="row" style="background-color: #366bcf;color:white; ">
                <div class="col-lg-12">
                    <img src="assets/img/team/team-4.jpg" class="img-fluid" alt="">
                    <h3 id="courseTitle"></h3>
                    <p id="courseDesc">
                    </p>
                </div>
            </div>
        </div>
    </section><!-- End Cource Details Section -->
    <!-- ======= Cource Details Tabs Section ======= -->
    <section id="cource-details-tabs" class="cource-details-tabs">
        <div class="container" data-aos="fade-up">
            <h3>Course Moduls</h3>
            <div class="row" id="moduls">
                <div class="row">
                    <div class="col-lg-12" id="modulNav">
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Cource Details Tabs Section -->
    <div class="text-center">
        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalRating" style="width:15%;margin-top:10px;color:black;box-shadow: 3px 14px 14px -3px rgba(0,0,0,0.5);"><h4>Leave Rating</h4></button>
    </div>
    <!-- Modal Modul-->
    <div class="modal fade" id="modalRating" tabindex="-1" role="dialog" aria-labelledby="modalRate" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Leave this course a rating</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="" id="formValidation" name="nameModal" method="post">
                        <div class="col">
                            <label>Email</label>
                            <input style="margin-bottom:10px;"type="text" class="form-control" id="email2" name="Testimonial" placeholder="email....">
                        </div>
                        <div class="col" style="margin-bottom:20px;">
                            <label>Rating</label>
                            <select class="form-control" id="rating" required value="rating">
                                <option value="-">-- Rate this Course --</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div class="col">
                            <label>Testimony</label>
                            <input style="height:75px;" type="text" class="form-control" id="testimony" name="Testimonial" placeholder="Testimonial....">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="GiveRate(userId,dataID);">Save</button>
                </div>
            </div>
        </div>
    </div>



</main><!-- End #main -->
@section Scripts {
    <script>
        var dataID = @ViewData["Id"];
        var userId = @HttpContextAccessor.HttpContext.Session.GetInt32("SessionId")
        console.log(dataID);
    </script>
}