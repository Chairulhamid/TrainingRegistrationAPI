@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutAdmin";
}
<div class="text-center">
<h4>Data Modul</h4>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalModul">
    Add Modul
</button>


<!-- Tabel Topic-->
<div class="card shadow mb-4" style="margin-top:10px;">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover display nowrap dataTable dtr-inline table table-bordered table-striped text-center table-secondary table-hover" id="tableModul">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Modul ID</th>
                        <th>Modul Tittle</th>
                        <th>Modul Description</th>
                        <th>Modul Content</th>
                        <th>Course Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Input -->
<div class="modal fade" id="modalModul" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Modul</h5>
                <button type="button" onclick="window.location.reload()" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formValidation" name="nameModal">
                    <div class="form-group">
                        <div class="row mb-2" id="hideRow">
                            <div class="col">
                                <label>Course</label>
                                <select class="form-control" id="courseId">
                                </select>
                                @* <input type="number" class="form-control" id="role_id" name="role_id" placeholder="Role Id....">*@
                            </div>
                        </div>
                    </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 control-label text-right">Modul Tittle</label>
                                <div class="col-sm-8">
                                    <input name="inputModulTittle" type="text" class="form-control" id="modulTittle" placeholder="Modul Tittle" value="">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 control-label text-right">Modul Description</label>
                                <div class="col-sm-8">
                                    <textarea name="inputModulDesc" type="text" class="form-control" id="modulDesc" placeholder="Modul Description" value=""></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 control-label text-right">Modul Content</label>
                                <div class="col-sm-8">
                                    <textarea name="inputModulContent" type="text" class="form-control" id="modulContent" placeholder="Modul Content" value=""></textarea>
                                </div>
                            </div>
                        </div>

</form>
            </div>
            <div class="modal-footer">
                <button type="button" class=" tombol btn btn-secondary" data-dismiss="modal" onclick="window.location.reload()">Close</button>
                <button id="btnAddModul" onlcick="Validaition()" type="submit" class="btn btn-primary">Add</button>
                <button id="btnUpdateModul" type="button" class="btn btn-primary" style="display:none;" onclick="UpdateModul();">Update</button>
            </div>
        </div>
    </div>
</div>

