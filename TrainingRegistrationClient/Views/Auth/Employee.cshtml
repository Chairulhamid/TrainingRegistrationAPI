@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutAdmin";
}
<div class="align-content-center text-center">
<h4>Data Employee</h4>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalData">
    Add Employee
</button>


<!-- Tabel Topic-->
<div class="card shadow mb-4" style="margin-top:10px;">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover display nowrap dataTable dtr-inline table table-bordered table-striped text-center table-secondary table-hover" id="tableEmployee">
                <thead>
                    <tr>
                        <th>No</th>
                        @*<th>Employee Id</th>*@
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Addrees</th>
                        <th>Gender</th>
                        <th>BirthDate</th>
                        <th>CV</th>
                        @*<th>Hire Date</th>*@
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class=" open-modal modal fade" id="modalData" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Data Employee</h5>
                <button type="button" class="close" onclick="window.location.reload()" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" id="formValidation" name="nameModal" method="post">
                    <div class="row mb-2">
                        <div class="col" hidden >
                            <input type="text" class="form-control" id="employeeId" name="employeeId" placeholder="">
                            <input type="text" class="form-control" id="accountId" name="accountId" placeholder="">
                        </div>
                        <div class="col">
                            <label>First Name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name....">
                        </div>
                        <div class="col">
                            <label>Last Name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name....">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label>Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone....">
                        </div>
                        <div class="col">
                            <label>Birth Date</label>
                            <input type="date" class="form-control" id="birthDate" name="birthDate" placeholder="Birth Date....">
                        </div>
                        <div class="col" id="hireDate1">
                            <label>Hire Date</label>
                            <input type="date" class="form-control" id="hireDate" name="hireDate" placeholder="hire Date....">
                        </div> 
                        <div class="col" id="hireDate2" style="display:none;">
                            <label>Hire Date</label>
                            <input type="text" class="form-control" id="tanggal" name="hireDate" placeholder="hire Date....">
                        </div> 
                        <div class="col">
                            <label>Address</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Address....">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label>Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email....">
                        </div>
                        <div class="col" id="hidePass">
                            <label>Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password....">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label>Link CV</label>
                            <input type="text" class="form-control" id="cv" name="cv" placeholder="Put your CV link....">
                        </div>
                        <div class="col">
                            <label>Gender</label>
                            <select class="form-control" id="gender" required value="gender">
                                <option value="-">-- Select Gender --</option>
                                <option value="0">Male</option>
                                <option value="1">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-2" id="hideRow">
                        <div class="col">
                            <label>Role</label>
                            <select class="form-control" id="role_id">
                            </select>
                            @* <input type="number" class="form-control" id="role_id" name="role_id" placeholder="Role Id....">*@
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class=" tombol btn btn-secondary" data-dismiss="modal" onclick="window.location.reload()">Close</button>
                <button id="btnAddEmployee" type="submit" class="btn btn-primary">Add</button>
                <button id="btnUpdateEmployee" type="button" class="btn btn-primary" style="display:none;" onclick="UpdateEmp();">Update</button>
            </div>
        </div>
    </div>
</div>
